{
  "mcpServers": {
    "github": {
      "command": "node",
      "args": ["-e", "console.log('GitHub integration available')"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "git": {
      "command": "node",
      "args": ["-e", "console.log('Git integration available')"]
    },
    "filesystem": {
      "command": "node",
      "args": ["-e", "console.log('File system tools available')"]
    }
  },
  "workspace": {
    "name": "AI Games",
    "path": "/Users/zarabotaet/projects/AIgames",
    "type": "vite-react-game",
    "description": "Browser-based games created by AI for you and your wife"
  },
  "tools": {
    "build": {
      "command": "npm run build",
      "description": "Build production bundle"
    },
    "dev": {
      "command": "npm run dev",
      "description": "Start development server"
    },
    "test": {
      "command": "npm run test",
      "description": "Run unit tests"
    },
    "deploy": {
      "command": "npx vercel --prod",
      "description": "Deploy to Vercel"
    },
    "lint": {
      "command": "npm run lint",
      "description": "Lint code with ESLint"
    }
  },
  "capabilities": {
    "codeCompletion": true,
    "gitIntegration": true,
    "fileManagement": true,
    "terminalAccess": true,
    "debugging": true
  },
  "gameTemplates": {
    "clickGame": {
      "status": "active",
      "path": "src/components/GameCanvas.tsx",
      "description": "Click Master - Simple clicking game"
    },
    "puzzleGame": {
      "status": "coming-soon",
      "description": "Puzzle Quest"
    },
    "memoryGame": {
      "status": "coming-soon",
      "description": "Memory Match"
    }
  }
}
